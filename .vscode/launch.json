{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask (master)",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": ["run", "--host=0.0.0.0", "--port=8436"],
      "env": {
        "FLASK_APP": "run:app"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Flask (slave)",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": ["run", "--host=0.0.0.0", "--port=8436"],
      "env": {
        "FLASK_APP": "run:app",
        "CONFIG_PATH": "config.slave.json"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}
